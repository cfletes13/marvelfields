<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="dashboard_sale_order_tree_view">
        <field name="name">dashboard.sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
         	<tree string="Dashboard Sale Tree">
         		<field name="name" string="Numero de Presupuesto"/>
               	<field name="warehouse_id"/>
               	<field name="partner_id"/>
               	<field name="date_order" string="Fecha de Cotizacion"/>
               	<field name="confirmation_date"/>
			    <field name="x_fecha_surtido"/>
			    <field name="x_fecha_factura"/>
			    <field name="x_fecha_envio"/>
			    <field name="user_id" />
			    <field name="dfactura"/>
    			<field name="mostrador"/>
    			<field name="margin"/>
               	<field name="state"/>
           	</tree>
       	</field>
   	</record>


   	<record model="ir.actions.act_window" id="dashboard_sale_order_action">
       	<field name="name">Dashboard Sales</field>
       	<field name="res_model">sale.order</field>
       	<field name="view_type">form</field>
       	<field name="view_mode">tree</field>
       	<field name="view_id" ref="dashboard_sale_order_tree_view"/>
       	<field name="domain">[('user_id', '=', uid)]</field>
       	<field name="context">{'create': False}</field>
   	</record>

	<menuitem id="dashboard_sale_order_menu" name="Dashboard"
    	parent="sale.sale_order_menu"
    	action="dashboard_sale_order_action"
    	sequence="1"/>

</odoo>